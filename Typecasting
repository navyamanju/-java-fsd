package Demo;

public class typeCasting {

public static void main(String[] args) {
		byte p= 12;
	
	
		
		//implicit conversion
		System.out.println("Implicit Type Casting");
		char a='A';
		System.out.println("char value "+a);
		
		short q=p;
		System.out.println("short value "+q);
		
		int r=q;
		System.out.println("int value "+r);
		
		long s=r;
		System.out.println("long value "+s);
		
		float t=s;
		System.out.println("float value "+t);
		
		double u=t;
		System.out.println("double value "+u);
		
				
		System.out.println("\n");
		
		System.out.println("Explicit Type Casting");
		//explicit conversion
		
		double x=75.0;
		int y=(int)x;
		float f=(float)x;
		long l=(long)f;
		System.out.println("double value "+x);
		System.out.println("int value "+y);
		System.out.println("float value "+f);
		System.out.println("long value "+l);
		
		
	}
}
